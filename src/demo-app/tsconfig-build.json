{
   "compileOnSave": false,
   "compilerOptions": {
      "outDir": "../../dist/packages/demo-app",
      "module": "es2015",
      "target": "es5",
      "moduleResolution": "node",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": false,
      "noImplicitAny": false,
      "baseUrl": "./",
      "paths": {
         "@stratio/egeo": ["../lib/public_api"],
         "@stratio/egeo-demo": ["../egeo-demo/public_api"]
      },
      "types": [],
      "typeRoots": ["node_modules/@types"],
      "lib": [
         "es2016",
         "dom"
      ]
   },
   "exclude": [
      "test.ts",
      "**/*.spec.ts",
      "main.aot.ts"
   ]
}
